<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDescriptionActivity">

    <ProgressBar
        android:id="@+id/desc_progressbar"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/desc_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/desc_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/desc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:layout_below="@id/desc_image"/>

        <TextView
            android:id="@+id/desc_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:paddingStart="10dp"
            android:layout_below="@id/desc_title"/>

        <TextView
            android:id="@+id/desc_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100.45"
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:layout_below="@id/desc_title"
            android:layout_toEndOf="@id/desc_dollar"/>

        <TextView
            android:id="@+id/desc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:layout_below="@id/desc_price"/>


    </RelativeLayout>

</RelativeLayout>